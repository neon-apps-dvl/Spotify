    <style name="Theme.Spotify.PlaylistSelector.Text.Title" parent="Theme.Spotify.Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Spotify.PlaylistSelector.Item.Text.Title" parent="Theme.Spotify.Text">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.Spotify.PlaylistSelector.Item.Text.TrackCount" parent="Theme.Spotify.Text">
        <item name="android:textSize">14dp</item>

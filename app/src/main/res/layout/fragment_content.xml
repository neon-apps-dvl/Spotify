<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContentFragment">

    <ImageView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/temp_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/surface_view_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/playlist_view"
        android:layout_width="128dp"
        android:layout_height="128dp" />

    <ImageView
        android:id="@+id/next_track_view"
        android:layout_width="256dp"
        android:layout_height="256dp"/>

    <ImageView
        android:id="@+id/track_view"
        android:layout_width="256dp"
        android:layout_height="256dp"/>

    <com.pixel.spotify.ui.MediaControlsView
        android:id="@+id/media_controls_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>